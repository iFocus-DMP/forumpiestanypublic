---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import EventList from '../components/EventList.astro';
import Card from '../components/Card.astro';
import { project } from '../content/project';
---

<BaseLayout 
  title="Program 2026" 
  description="Program diskusných eventov Fórum Piešťany - 7 eventov v roku 2026, každý prvý štvrtok v mesiaci."
>
  <Hero 
    title="Program 2026" 
    subtitle="7 diskusných eventov, každý prvý štvrtok v mesiaci"
  />
  
  <Section>
    <div class="mb-8">
      <Card>
        <div class="space-y-4">
          <h2 class="text-2xl font-bold mb-4">Formát eventov</h2>
          <ul class="space-y-2 text-gray-700">
            <li><strong>Trvanie:</strong> {project.format.duration}</li>
            <li><strong>Publikum:</strong> {project.format.audience}</li>
            <li><strong>Nahrávanie:</strong> {project.format.recording}</li>
            <li><strong>Otázky:</strong> {project.format.questions}</li>
            <li><strong>Streamovanie:</strong> {project.format.streaming}</li>
            <li><strong>Klipy:</strong> {project.format.clips}</li>
            <li><strong>Jazyk:</strong> {project.format.language}</li>
          </ul>
          <p class="text-sm text-gray-600 mt-4">
            <strong>Poznámka:</strong> Eventy sa nekonajú v júli a auguste 2026.
          </p>
        </div>
      </Card>
    </div>
    
    <div class="mb-6">
      <h2 class="text-3xl font-bold mb-6">Kalendár eventov</h2>
      <EventList events={project.events} />
    </div>

    {project.timeLimited && (
      <div class="bg-yellow-50 border-l-4 border-primary-yellow p-4 mt-12 rounded-r-lg shadow-sm">
        <p class="text-sm font-semibold text-gray-800 flex items-center">
          <span class="mr-2 text-xl">⚠️</span> 
          Projekt je časovo obmedzený a končí po komunálnych voľbách 2026.
        </p>
      </div>
    )}
  </Section>
</BaseLayout>


---
interface Props {
  title?: string;
  class?: string;
}

const { title, class: className = '' } = Astro.props;
---

<div class={`bg-cream-light rounded-3xl shadow-sm p-10 md:p-12 border border-cream-warm/50 hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 ${className}`}>
  {title && (
    <h3 class="text-2xl md:text-3xl font-bold mb-6 text-text">{title}</h3>
  )}
  <slot />
</div>


---
interface Props {
  title?: string;
  class?: string;
}

const { title, class: className = '' } = Astro.props;
---

<div class={`bg-white rounded-2xl shadow-sm p-8 border border-gray-100 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 ${className}`}>
  {title && (
    <h3 class="text-xl font-bold mb-4 text-gray-900">{title}</h3>
  )}
  <slot />
</div>


---
interface Props {
  title?: string;
  class?: string;
}

const { title, class: className = '' } = Astro.props;
---

<div class={`bg-white rounded-lg shadow-md p-6 border border-gray-200 ${className}`}>
  {title && (
    <h3 class="text-xl font-bold mb-4 text-gray-900">{title}</h3>
  )}
  <slot />
</div>


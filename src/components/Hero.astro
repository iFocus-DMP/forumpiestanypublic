---
interface Props {
  title: string;
  subtitle?: string;
}

import { Image } from 'astro:assets';
import heroBg from '../assets/hero-bg.jpg';

const { title, subtitle } = Astro.props;
---

<section class="relative bg-gray-900 text-white py-32 md:py-48 overflow-hidden">
  <div class="absolute inset-0 z-0">
    <Image 
      src={heroBg} 
      alt="Fórum Piešťany Hero" 
      class="w-full h-full object-cover opacity-60"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/40 to-transparent"></div>
  </div>

  <div class="container-custom relative z-10">
    <div class="max-w-4xl">
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight drop-shadow-sm">
        {title}
      </h1>
      {subtitle && (
        <p class="text-xl md:text-2xl text-gray-200 uppercase tracking-wider font-light max-w-2xl drop-shadow-sm">
          {subtitle}
        </p>
      )}
    </div>
  </div>
</section>


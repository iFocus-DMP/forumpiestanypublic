---
interface Props {
  type?: 'speech-bubble' | 'people' | 'discussion' | 'circle' | 'abstract' | 'star';
  size?: 'sm' | 'md' | 'lg';
  color?: string;
  class?: string;
}

const { type = 'abstract', size = 'md', color = '#0066CC', class: className = '' } = Astro.props;

const sizeClasses = {
  sm: 'w-16 h-16',
  md: 'w-24 h-24',
  lg: 'w-32 h-32',
};
---

<div class={`inline-flex items-center justify-center ${sizeClasses[size]} ${className}`}>
  {type === 'speech-bubble' && (
    <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-full">
      <path d="M20 30C20 25.5817 23.5817 22 28 22H52C56.4183 22 60 25.5817 60 30V50C60 54.4183 56.4183 58 52 58H42L30 70V58H28C23.5817 58 20 54.4183 20 50V30Z" fill={color} opacity="0.15"/>
      <path d="M40 42C40 39.7909 41.7909 38 44 38H68C70.2091 38 72 39.7909 72 42V62C72 64.2091 70.2091 66 68 66H58L46 78V66H44C41.7909 66 40 64.2091 40 62V42Z" fill={color}/>
    </svg>
  )}
  
  {type === 'people' && (
    <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-full">
      <circle cx="25" cy="35" r="12" fill={color} opacity="0.15"/>
      <circle cx="25" cy="35" r="8" fill={color}/>
      <ellipse cx="25" cy="55" rx="15" ry="12" fill={color} opacity="0.15"/>
      <ellipse cx="25" cy="55" rx="11" ry="8" fill={color}/>
      <circle cx="75" cy="35" r="12" fill={color} opacity="0.15"/>
      <circle cx="75" cy="35" r="8" fill={color}/>
      <ellipse cx="75" cy="55" rx="15" ry="12" fill={color} opacity="0.15"/>
      <ellipse cx="75" cy="55" rx="11" ry="8" fill={color}/>
    </svg>
  )}
  
  {type === 'discussion' && (
    <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-full">
      <rect x="15" y="20" width="30" height="25" rx="4" fill={color} opacity="0.15"/>
      <rect x="17" y="22" width="26" height="21" rx="3" fill={color}/>
      <rect x="55" y="35" width="30" height="25" rx="4" fill={color} opacity="0.15"/>
      <rect x="57" y="37" width="26" height="21" rx="3" fill={color}/>
      <circle cx="50" cy="50" r="3" fill={color}/>
    </svg>
  )}
  
  {type === 'circle' && (
    <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-full">
      <circle cx="50" cy="50" r="45" fill={color} opacity="0.1"/>
      <circle cx="50" cy="50" r="30" fill={color} opacity="0.2"/>
      <circle cx="50" cy="50" r="15" fill={color}/>
    </svg>
  )}
  
  {type === 'star' && (
    <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-full">
      <path d="M50 10L58 38L88 38L65 56L73 84L50 66L27 84L35 56L12 38L42 38L50 10Z" fill={color} opacity="0.15"/>
      <path d="M50 20L56 40L76 40L60 52L66 72L50 60L34 72L40 52L24 40L44 40L50 20Z" fill={color}/>
    </svg>
  )}
  
  {(type === 'abstract' || type === undefined) && (
    <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-full">
      <rect x="20" y="20" width="30" height="30" rx="8" fill={color} opacity="0.15" transform="rotate(15 35 35)"/>
      <rect x="22" y="22" width="24" height="24" rx="6" fill={color} transform="rotate(15 34 34)"/>
      <circle cx="65" cy="35" r="18" fill={color} opacity="0.15"/>
      <circle cx="65" cy="35" r="12" fill={color}/>
      <rect x="30" y="55" width="40" height="25" rx="6" fill={color} opacity="0.15"/>
      <rect x="32" y="57" width="36" height="21" rx="4" fill={color}/>
    </svg>
  )}
</div>


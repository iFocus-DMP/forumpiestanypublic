---
import type { Topic } from '../content/project';
import Card from './Card.astro';

interface Props {
  topics: Topic[];
}

const { topics } = Astro.props;
---

<div class="space-y-6">
  {topics.map((topic) => (
    <Card>
      <div class="space-y-3">
        {topic.isFinal && (
          <span class="inline-block text-sm font-semibold text-gray-900 bg-yellow-100 border border-primary-yellow px-3 py-1 rounded-full mb-2">
            Záverečná debata
          </span>
        )}
        <h3 class="text-xl font-bold text-gray-900">
          {topic.title}
        </h3>
        <div class="space-y-2 pt-2">
          <p class="font-semibold text-gray-700">Prečo:</p>
          <p class="text-gray-600 leading-relaxed">
            {topic.preco}
          </p>
        </div>
      </div>
    </Card>
  ))}
</div>

